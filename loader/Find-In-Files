file=($(find ./)) &&
for i in ${file[@]}
    do
        cat -n $i 2>/dev/null | grep --color -q -i -e "$@" && 
        printf -- "---------------START--------------- $i:\n" &&
        cat -n $i 2>/dev/null | grep --color -i -e "$@" &&
        printf -- "----------------END---------------- $i\n"
done
